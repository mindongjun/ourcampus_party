<h3><%= @f.univ.name%> 축제 일정</h3>

<style>
  table {
    margin: 30px;
  }
  table tr th {
    border-top: 1px solid black;
  }
  table tr td {
    border-top: 1px solid black;
    border-bottom: 1px solid black;
  }
</style>

<table>
  <tr>
    <th style="width:20%">날짜</th>
    <th style="width:70%">초대 가수</th>
  </tr>
  <% @f.festival_schedules.each do |fs| %>
      <tr>
        <td><%= fs.schedule.date.strftime("%y.%m.%d") %></td>
        <td>
          <%= fs.celebs.pluck(:name).join(", ") %>
        </td>
      </tr>
  <% end %>
</table>

<a href="<%=@f.univ.path_link%>" class="btn btn-default">길찾기</a>

