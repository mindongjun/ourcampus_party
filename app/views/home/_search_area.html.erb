<div class="search_area">
    <h3>일정 검색</h3>
    
    <%= form_tag '/data_search', :remote => true do %>
        <%= label_tag :date_from, "From" %>
        <%= text_field_tag :date_from, "", :class => 'form-control' %>
        
        <%= label_tag :date_to, "to" %>
        <%= text_field_tag :date_to, "", :class => 'form-control' %>
        
        <%= text_field_tag :university, '',:class => 'form-control', :placeholder => '학교 검색' %>
    <% end %>
    
    <%#= render 'home/autocomplete' %>
</div>
<script>
  $(document).ready(function(){
    $( "#date_from" ).datepicker({
      dateFormat: 'yy/mm/dd'
    });
    $( "#date_to" ).datepicker({
      dateFormat: 'yy/mm/dd'
    });
    $( "#university" ).autocomplete({
      focus: function(event, ui) {
        return false;
      },
      source: <%=raw Univ.all.pluck(:name)%>
    });
  });

</script>