function submitForm() {
    $.ajax({
      url: '/home/add_search',
      data: {
        univ: $('form #univ').val(),
        from: $('form #from').val(),
        to: $('form #to').val(),
        celeb: $('form #celeb').val(),
        keyword: $('form #keyword').val()
      },
      success: function(data) {
        if( data.result == true )
          $('#search-result tr.result-item').remove();
      },
      error : function(xhr, status, error) {
        alert("에러발생");
      }
    });
}

$(document).ready(function() {
  $("#result-table tbody").infinitescroll({
    navSelector: "nav.pagination",
    nextSelector: "nav.pagination a",
    itemSelector: "#result-table tr.result-item",
    behavior: 'local',
    loading: {
//      speed: 0,
      img: '/assets/loading-img.gif',
      msgText: '',
      finishedMsg: '끝났습니다',
      finished: function(opts) {
        if (!opts.state.isBeyondMaxPage) {
          alert("start");
          opts.loading.msg.fadeOut(opts.loading.speed);
        }
        else {
          alert("end");
          $('nav.pagination a.avail').unbind('click');
        }
      }
    }
  });

  $(window).unbind('.infscr');

  $('nav.pagination a.avail').click(function() {
      alert("123");

      $('#result-table tbody').infinitescroll('retrieve');
      $('nav.pagination').show();
      return false;
    });
});

